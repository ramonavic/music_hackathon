<div class = "container">
  <div class="section" >
    <h2>Twitter feed</h2>
    <% @tweet.collect do |tweet| %>
    <p><%= "#{tweet.user.screen_name}: #{tweet.text}" %></p>
    <% end %><br>
    <h2> Tour Dates </h2>
    <div id="tourdates">
      <% if @mtvscrape.blank? %>
        <h3> Couldn't find tour dates of <%= @artist.name %> </h3>
      <% else %>
        <% @mtvscrape.each do |a| %>
          <%= raw a.css('.content-inner')[5] %>
        <% end %>
      <% end %>
   </div>
  </div>
</div>
<div class="parallax-container valign-wrapper">
  <div class="section no-pad-bot">
    <div class="container">
      <div class="section" >
          <h2> Biography </h2>
          <p>
          <% if @wikiscrape.blank? %>
            <h3> Couldn't find biography of <%= @artist.name %> </h3>
          <% else %>
            <% @wikiscrape.each do |a| %>
              <%= a.css('p')[0].text unless a.css('p')[0].text.length < 100  %>
              <%= a.css('p')[1].text %> <br><br>
              <%= a.css('p')[2].text %> <br><br>
              <%= a.css('p')[3].text %> <br><br>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <div class="parallax"><%= image_tag("festival.jpg", :alt => "artist") %></div>
</div>
<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 center">
        <div>
        <h2>News</h2>
        <% if @mtvnews.blank? %>
          <h3> Couldn't find MTV news of <%= @artist.name %> </h3>
        <% else %>
          <% @mtvnews.each do |a| %>
            <p><%= raw a.css('.multiline') %></p>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>






